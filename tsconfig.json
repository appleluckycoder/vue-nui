{
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.js"],
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "module": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM"
    ]
  }
}